const posts = [
  { slug: 'how-much-do-meetings-cost', title: 'How Much Do Meetings Really Cost?', description: 'The average company wastes $25,000+ per employee per year on meetings.', date: '2026-02-14', readTime: '5 min', icon: 'üí∏', tag: 'Data' },
  { slug: 'meeting-cost-by-company-size', title: 'Meeting Cost by Company Size', description: 'From 5-person startups to 10,000-person enterprises ‚Äî with exact calculations.', date: '2026-02-13', readTime: '6 min', icon: 'üè¢', tag: 'Analysis' },
  { slug: 'could-this-meeting-have-been-an-email', title: 'Could This Have Been an Email?', description: 'A decision framework for when meetings are necessary vs. burning money.', date: '2026-02-12', readTime: '4 min', icon: 'üìß', tag: 'Framework' },
