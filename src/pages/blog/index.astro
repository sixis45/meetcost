  { slug: 'standup-meeting-cost', title: 'Your Daily Standup Cost Per Year', description: '15 minutes √ó 240 days. The number gets uncomfortable fast.', date: '2026-02-10', readTime: '4 min', icon: '‚è±', tag: 'Calculator' },
  { slug: 'fully-loaded-employee-cost', title: 'Fully Loaded Employee Cost', description: 'Your employees cost 1.25-1.4√ó their base salary. Here is the true rate.', date: '2026-02-09', readTime: '5 min', icon: 'üßÆ', tag: 'Guide' },
  { slug: 'time-spent-in-meetings-statistics', title: 'Meeting Statistics 2026', description: 'How much time does the average worker spend in meetings? Key data.', date: '2026-02-08', readTime: '5 min', icon: 'üìä', tag: 'Data' },
  { slug: 'meeting-free-days', title: 'Meeting-Free Days Work', description: 'Companies with no-meeting days report 25-35% productivity gains.', date: '2026-02-07', readTime: '5 min', icon: 'üö´', tag: 'Strategy' },
  { slug: 'context-switching-cost-meetings', title: 'The Context Switching Tax', description: 'A 30-minute meeting costs nearly double when you add refocus time.', date: '2026-02-06', readTime: '4 min', icon: 'üß†', tag: 'Research' },
  { slug: 'cancel-recurring-meetings', title: 'Cancel Recurring Meetings', description: 'How to identify and justify cutting meetings ‚Äî with data that works.', date: '2026-02-05', readTime: '4 min', icon: 'üóëÔ∏è', tag: 'Playbook' },
  { slug: 'zoom-meeting-cost', title: 'The True Cost of Zoom Meetings', description: 'The salary cost dwarfs your Zoom subscription by 100√ó.', date: '2026-02-04', readTime: '4 min', icon: 'üìπ', tag: 'Analysis' },
];
---
<Base title="Meeting Cost Insights & Statistics ‚Äî MeetCost Blog" description="Data-driven articles about meeting costs, meeting productivity, and how to reduce wasted time." canonical="/blog">
  <Nav />
  <section class="blog-page">
    <div class="blog-header">
      <h1>Insights</h1>
      <p>The data behind your most expensive habit.</p>
    </div>
    <div class="grid">
      {posts.map((post, i) => (
        <a href={`/blog/${post.slug}`} class="card">
          <div class="card-icon">{post.icon}</div>
          <div class="card-tag">{post.tag}</div>
          <h2 class="card-title">{post.title}</h2>
          <p class="card-desc">{post.description}</p>
          <div class="card-footer">
            <span class="card-time">{post.readTime}</span>
            <span class="card-arrow">‚Üí</span>
          </div>
        </a>
      ))}
    </div>
  </section>
</Base>

<style>
  .blog-page{max-width:960px;margin:0 auto;padding:48px 24px 80px;position:relative;z-index:1}
  .blog-header{text-align:center;margin-bottom:48px}
  .blog-header h1{font-size:36px;font-weight:800;margin-bottom:8px;letter-spacing:-0.5px}
  .blog-header p{font-size:16px;color:var(--text-dim);font-weight:300}

  .grid{display:grid;grid-template-columns:repeat(3,1fr);gap:16px}

  .card{display:flex;flex-direction:column;background:var(--surface);border:1px solid var(--border);border-radius:14px;padding:24px;text-decoration:none;color:var(--text);transition:all .25s;position:relative;overflow:hidden}
  .card:hover{border-color:var(--accent);transform:translateY(-3px);box-shadow:0 12px 40px rgba(0,0,0,0.3);text-decoration:none}
  .card:hover .card-arrow{transform:translateX(4px);color:var(--accent)}
  .card:hover .card-icon{transform:scale(1.1)}

  .card-icon{font-size:28px;margin-bottom:16px;transition:transform .25s}

  .card-tag{display:inline-block;font-size:10px;font-weight:700;letter-spacing:1.5px;text-transform:uppercase;color:var(--accent);background:var(--accent-glow);padding:4px 10px;border-radius:6px;margin-bottom:14px;width:fit-content}

  .card-title{font-size:17px;font-weight:700;line-height:1.3;margin-bottom:10px;letter-spacing:-0.2px}

  .card-desc{font-size:13px;color:var(--text-dim);line-height:1.5;flex:1;margin-bottom:16px}

  .card-footer{display:flex;align-items:center;justify-content:space-between;margin-top:auto}
  .card-time{font-size:11px;color:var(--text-dim);font-family:var(--font-mono)}
  .card-arrow{font-size:16px;color:var(--text-dim);transition:all .25s}

  @media(max-width:768px){
    .grid{grid-template-columns:repeat(2,1fr);gap:12px}
    .card{padding:20px}
    .card-title{font-size:15px}
  }
  @media(max-width:480px){
    .grid{grid-template-columns:1fr;gap:12px}
  }
</style>
